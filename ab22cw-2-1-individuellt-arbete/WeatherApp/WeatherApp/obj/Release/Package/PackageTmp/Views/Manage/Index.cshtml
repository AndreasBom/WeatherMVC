@model WeatherApp.Models.IndexViewModel
@{
    ViewBag.Title = "Kontoinställningar";
}


<p class="text-success">@ViewBag.StatusMessage</p>
<div class="container">

    <div class="row">
        <div class="col-sm-offset-1 col-sm-5">
            <h3>Inställningar</h3>
            <div class="form-group">
                @using (Html.BeginForm("SaveDefaultLocation", "Manage", FormMethod.Post))
                {
                    @Html.AntiForgeryToken();
                    @Html.LabelFor(m => m.StartLocation, new { @class = "" })
                    @Html.EditorFor(m => m.StartLocation, null, new { htmlAttributes = new { @class = "form-control" } })
                    <button class="btn btn-default btnFloatLeft">Spara</button>
                    @Html.ValidationMessageFor(m=>m.StartLocation)
                    <span class="alert-success">@TempData["savedToXml"]</span>
                }
            </div>
        </div>


        <div class="col-sm-5" style="margin-top: 50px;">
            
            <h4>
                Lösenord:
                <span>
                    [
                    @if (Model.HasPassword)
                    {
                        @Html.ActionLink("Ändra lösenord", "ChangePassword")
                    }
                    else
                    {
                        @Html.ActionLink("Skapa lösenord", "SetPassword")
                    }
                    ]
                </span>
            </h4>
        </div>
    </div>
    <hr/>
    @Html.ActionLink("Tillbaka", "Index", "Weather")
</div>
